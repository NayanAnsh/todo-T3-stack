generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(cuid())
  name       String
  email      String  @unique
  profilePic String?
  tasks      Task[]
  password   String
}

model Task {
  id          String   @id @default(cuid())
  name        String
  tags        String[]
  description String
  createdDate DateTime @default(now())
  startDate   DateTime
  endDate     DateTime
  repeat      String
  timesDone   Int
  isPending   Boolean  @default(false)
  isDone      Boolean  @default(false)
  author      User     @relation(fields: [userUid], references: [id])
  userUid     String
}
